<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/transparant"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@id/favorite"
                android:layout_margin="10dp"
                android:background="@drawable/favorite"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_icon"/>

        <RelativeLayout
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:contentDescription="@string/image_icon"
                    android:id="@+id/name_tag"
                    android:src="@drawable/nametag"
                    android:layout_alignTop="@id/name"
                    android:layout_alignBottom="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>

            <TextView
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_toEndOf="@id/name_tag"
                    android:id="@id/name"
                    android:layout_marginTop="5dp"
                    tools:text="Bambang priyombodo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <ImageView
                    android:contentDescription="@string/image_icon"
                    android:id="@+id/position_tag"
                    android:src="@drawable/positiontag"
                    android:layout_alignTop="@id/position"
                    android:layout_alignBottom="@id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_toEndOf="@id/position_tag"
                    android:layout_below="@id/name"
                    android:text="@string/kosong"
                    android:id="@id/position"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    tools:text="Staf Bidang OPH dan Penegakan Hukum Satpol PP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <ImageView
                    android:contentDescription="@string/image_icon"
                    android:id="@+id/phone_tag"
                    android:src="@drawable/phonetag"
                    android:layout_alignTop="@id/phone"
                    android:layout_alignBottom="@id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>

            <TextView
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_toEndOf="@id/phone_tag"
                    android:layout_below="@id/position"
                    android:text="@string/kosong"
                    android:id="@id/phone"
                    android:layout_marginTop="5dp"
                    tools:text="081218185551"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <ImageView
                    android:contentDescription="@string/image_icon"
                    android:id="@+id/address_tag"
                    android:src="@drawable/locationtag"
                    android:layout_alignTop="@id/address"
                    android:layout_alignBottom="@id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>

            <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_toEndOf="@id/address_tag"
                    android:layout_below="@id/phone"
                    android:text="@string/kosong"
                    android:id="@id/address"
                    android:layout_marginTop="5dp"
                    tools:text="Jl. Medan Merdeka Selatan No. 8-9, Jakarta Pusat"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>